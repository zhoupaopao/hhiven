<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<include 
    android:id="@+id/atychildac_title"
    layout="@layout/title3"
    />
 <LinearLayout 
    android:id="@+id/childac_search_linear"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:focusable="true"  
   android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="#ffffff">
    <EditText
    android:id="@+id/childac_search"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:singleLine="true"
    android:background="@mipmap/input"
    android:drawableLeft="@mipmap/search"
    android:iconifiedByDefault="false"
    android:hint="搜索"
   android:imeOptions="actionSearch"
   android:drawablePadding="5dp"
   android:paddingLeft="7dp"
    android:textSize="14dp"
    />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:visibility="gone"
    android:id="@+id/ca_loginaccount_linear">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:text="登录帐号"
        android:textSize="18dp"/>

     <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_right" />
</LinearLayout>
<ListView
    android:id="@+id/ac_listview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:divider="#aaa"
    android:dividerHeight="1px">

</ListView>
    
</LinearLayout>
